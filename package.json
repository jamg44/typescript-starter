{
	"name": "node-typescript-starter",
	"version": "1.0.0",
	"description": "A Node.js TypeScript starter project",
	"author": "jamg44",
	"repository": "jamg44/node-typescript-starter",
	"license": "MIT",
	"main": "index.ts",
	"private": true,
	"scripts": {
		"build": "tsc && tsdown",
		"dev": "node --import=tsx --watch src/index.ts",
		"start:prod": "node dist/index.js",
		"check": "biome check --write",
		"test": "vitest run",
		"test:cov": "vitest run --coverage"
	},
	"dependencies": {
		"dotenv": "17.2.3",
		"pino": "10.1.0",
		"zod": "4.1.12"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.2",
		"@types/node": "^24.9.2",
		"@vitest/coverage-v8": "4.0.6",
		"pino-pretty": "13.1.2",
		"tsdown": "^0.15.12",
		"tsx": "4.20.6",
		"typescript": "5.9.3",
		"vite-tsconfig-paths": "5.1.4",
		"vitest": "4.0.6"
	},
	"tsdown": {
		"entry": [
			"src/index.ts"
		],
		"outDir": "dist",
		"format": [
			"esm",
			"cjs"
		],
		"target": "es2020",
		"sourcemap": true,
		"clean": true,
		"dts": true,
		"splitting": false,
		"skipNodeModulesBundle": true
	},
	"packageManager": "pnpm@10.14.0"
}
